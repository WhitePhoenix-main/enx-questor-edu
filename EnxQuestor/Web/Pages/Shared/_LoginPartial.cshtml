@using Microsoft.AspNetCore.Identity
@using Web.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav flex items-center gap-2">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span class="nav-link">Привет, @User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
            <button type="submit" class="btn nav-link">Выйти</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Войти</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/signin-microsoft">Войти через Microsoft</a>
    </li>
}
</ul>
