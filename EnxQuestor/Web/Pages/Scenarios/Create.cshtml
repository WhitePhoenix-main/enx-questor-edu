@page
@attribute [Authorize(Policy = Web.Authorization.CrudPolicies.Create)]
@using Microsoft.AspNetCore.Authorization
@model Web.Pages.Scenarios.CreateModel
@{
    ViewData["Title"] = "Создать сценарий";
}

<h1>Создать сценарий</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Title"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Slug"></label>
        <input asp-for="Input.Slug" class="form-control" />
        <span asp-validation-for="Input.Slug" class="text-danger"></span>
        <div class="form-text">Уникальный идентификатор в URL.</div>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Description"></label>
        <textarea asp-for="Input.Description" class="form-control" rows="4"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Tags"></label>
        <input asp-for="Input.Tags" class="form-control" />
        <div class="form-text">Например: обучение,начало,демо</div>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Difficulty"></label>
        <input asp-for="Input.Difficulty" class="form-control" />
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Input.IsPublished" />
        <label class="form-check-label" asp-for="Input.IsPublished"></label>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-success" type="submit">Создать</button>
        <a asp-page="Index" class="btn btn-link">Отмена</a>
    </div>
</form>
